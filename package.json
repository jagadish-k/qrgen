{
  "name": "qr-code-generator-extension",
  "version": "1.0.0",
  "description": "Chrome extension for generating QR codes with embedded images",
  "main": "index.js",
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run clean && vite build",
    "clean": "rm -rf build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "test": "echo 'No tests configured yet'",
    "prepare-release": "./scripts/prepare-release.sh",
    "build:zip": "npm run build && cd build && zip -r ../extension.zip .",
    "publish:manual": "npm run build:zip && echo 'Extension zip created. Upload manually to Chrome Web Store Developer Dashboard.'",
    "validate:extension": "npm run lint && npm run typecheck && npm run build"
  },
  "keywords": [
    "chrome-extension",
    "qr-code",
    "react",
    "typescript"
  ],
  "author": "Jagadish K. <79893101+jagadish-k@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "colorthief": "^2.4.0",
    "qrious": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.24",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0"
  }
}
